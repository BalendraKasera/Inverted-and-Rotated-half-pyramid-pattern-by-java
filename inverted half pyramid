public class InvertedPyramid {
    public static void main(String args[]) {
        // outer
        for (int i = 1; i <= 4; i++) {
            // inner
            for (int j = 1; j <= 4; j++) {
                if (j <= (4 - i)) {
                    System.out.print(" ");
                } else {
                    System.out.print("*");
                }
            }
            System.out.println();

        }

    }

}
